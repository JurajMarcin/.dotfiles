# Account specific

set my_mail     = "`pass neomutt/personal/mail`"
set my_pass     = "`pass neomutt/personal/pass`"

color status    black green
set spoolfile   = "+Personal"
set trash       = "+Personal/Trash"
unset record
set postponed   = "+Personal/Drafts"

# SMTP
set smtp_url            = "smtps://$my_mail@smtp.gmail.com"
set smtp_pass           = "$my_pass"
set ssl_starttls        = "yes"
set ssl_force_tls       = "yes"
set smtp_authenticators = "login"

# Info
set realname            = "Juraj Marcin"
unset signature
set from                = "$my_mail"
set use_from            = "yes"

# Archive
bind index          A       purge-message

# vi: ft=neomuttrc
