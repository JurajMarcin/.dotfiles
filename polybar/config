# vim: filetype=cfg

[colors]
bg     = #212121
bg-alt = #CFD8DC
fg     = #FFFFFF
fg-alt = #616161
acc    = #F44336

[bar/main]
monitor = ${env:MONITOR}
width = 100%
height = 30
radius = 0
fixed-center = true

background = ${colors.bg}
foreground = ${colors.fg}

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = Roboto:style=Medium:size=11;3
font-1 = MaterialDesignIcons:style=Regular:size=14;4

modules-left = powermenu i3 player-mpris-tail
modules-center = date
modules-right = bluetooth wlan eth disk memory cpu temperature battery pulseaudio dunst xkeyboard

tray-position = right
tray-padding = 0
tray-detached = false

cursor-click = pointer
cursor-scroll = ns-resize

;
; WM Management
;

